{
  "name": "openid-connect-demo",
  "version": "1.0.0",
  "description": "OpenID Connect demo with oidc-provider using npm workspaces",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:auth-service": "npm run start --workspace=@demo/auth-service",
    "start:admin-backend": "npm run start --workspace=@demo/admin-backend",
    "build:admin-ui": "npm run build --workspace=@demo/admin-ui",
    "start:all": "npm run build:admin-ui && concurrently \"npm run start:auth-service\" \"npm run start:admin-backend\"",
    "dev:auth-service": "npm run dev --workspace=@demo/auth-service",
    "dev:admin-backend": "npm run dev --workspace=@demo/admin-backend",
    "dev:admin-ui": "npm run dev --workspace=@demo/admin-ui",
    "dev:all": "concurrently \"npm run dev:auth-service\" \"npm run dev:admin-backend\" \"npm run dev:admin-ui\"",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "openid-connect",
    "oidc",
    "oidc-provider",
    "demo"
  ],
  "author": "",
  "license": "MIT"
}
